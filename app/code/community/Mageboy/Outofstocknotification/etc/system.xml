<?xml version="1.0"?>
<!--
/**
 * Magento admin configiguration section config
 *
 * @author Krishna Ijjada
 */
-->
<config>
    <sections>
        <outofstocknotification translate="label" module="outofstocknotification">
            <label>Out of Stock Notification </label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <mail translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                    	<template translate="label">
                            <label>Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                    	<successmessage translate="label">
            			<label>Success Message</label>
            			<frontend_type>text</frontend_type>
            			<sort_order>3</sort_order>
            			<show_in_default>1</show_in_default>
            			<show_in_website>1</show_in_website>
            			<show_in_store>1</show_in_store>                    
                        </successmessage>
                    </fields>
                </mail>
            </groups>            
        </outofstocknotification>
    </sections>
</config>
